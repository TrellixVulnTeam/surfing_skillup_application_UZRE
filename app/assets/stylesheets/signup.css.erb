.main-container-signup {
  background-image: url("<%= asset_path('MIZUHO19217017_TP_V.jpg') %>");
  height: 1000px;
  background-size: cover;
  overflow: hidden;
  position: relative;
}

.main-container-signup:before,
.main-container-signup:after {
  animation: 2s cubic-bezier(.4,   0, .2, 1) forwards;
  background: #fff;
  content: '';
  left: 0;
  pointer-events: none;
  position: absolute;
  right: 0;
  z-index: 1;
}

.main-container-signup:before {
  animation-name: main-container-signup-before;
  top: 0;
  bottom: 50%;
}

.main-container-signup:after {
  animation-name: main-container-signup-after;
  top: 50%;
  bottom: 0;
}

@keyframes main-container-signup-before {
  100% {
    transform: translateX(100%);
  }
}

@keyframes main-container-signup-after {
  100% {
    transform: translateX(-100%);
  }
}
