.main-container-passwordreset {
    background-image: url("<%= asset_path('surf.jpg') %>");
    height: 800px;
    background-size: cover;
    overflow: hidden;
    position: relative;
  }
  
  .main-container-passwordreset:before,
  .main-container-passwordreset:after {
    animation: 2s cubic-bezier(.4, 0, .2, 1) forwards;
    background: #fff;
    content: '';
    left: 0;
    pointer-events: none;
    position: absolute;
    right: 0;
    z-index: 1;
  }
  
  .main-container-passwordreset:before {
    animation-name: main-container-passwordreset-before;
    top: 0;
    bottom: 50%;
  }
  
  .main-container-passwordreset:after {
    animation-name: main-container-passwordreset-after;
    top: 50%;
    bottom: 0;
  }
  
  @keyframes main-container-passwordreset-before {
    100% {
      transform: translateX(100%);
    }
  }
  
  @keyframes main-container-passwordreset-after {
    100% {
      transform: translateX(-100%);
    }
  }
