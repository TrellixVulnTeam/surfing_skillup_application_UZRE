<% provide(:button_text, '更新') %>
<div class="main-container-user-edit">
  <div class="row">
    <div class="col-md-5 col-md-offset-5">
      <h2 class="label-user-edit"><b>ユーザー設定</b></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="email-field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="current_password-field">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "current-password", size: "40" %>
        </div>

        <div class="password-field">
          <%= f.label :password %><br/>
          <%= f.password_field :password, autocomplete: "new-password", size: "40" %>
          <% if @minimum_password_length %>
            <br />
            <b><em><%= @minimum_password_length %> 文字以上で登録してください</em></b>
          <% end %>
        </div>

        <div class="password_confirmation-field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "40" %>
        </div>

        <div style="margin-left: 80px; margin-top: 10px;">
          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
          <%= link_to "キャンセル", root_path(current_user), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>