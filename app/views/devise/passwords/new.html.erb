<div class="main-container-passwordreset">
  <div class="row">
    <div class="col-md-5 col-md-offset-5">
      <h1 class="password-republish-space">パスワード再発行</h1>
      <br>
      <br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="email-space">
          <%= f.label :email %><br />
          <%= f.email_field :email, placeholder: "xxxx@gmail.com", autofocus: true, autocomplete: "email", size: "40" %>
        </div>

        <div class="signup-space">
          <%= f.submit "送信", class: "btn btn-primary btn-sign-up" %>
        </div>
      <% end %>
      <h4 class="password-republish-message">※メールアドレス入力後に当該アドレスにパスワード再設定メールを発行致します。</h4>
    </div>
  </div>
</div＞
