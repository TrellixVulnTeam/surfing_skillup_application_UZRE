<div class="main-container-manager">
  <div class="row">
    <div class="col-md-5 col-md-offset-5">
      <div style="margin-top: 50px;">
        <% flash.each do |message_type, msg| %>
          <div class="alert alert-<%= message_type %>"><%= msg %></div>
        <% end %>
      </div>
      <h1 class="label-manager"><b>管理者専用ページ</b></h1>
      <br>
      <br>
      <%= form_with(model: @user, method: :get, local: true) do |f| %>

        <div class="admin-check-space">
          <h3>スクール生からの通知:なし</h3>
        </div>

        <div class="shop-space">
          <%= link_to "ショップ情報", '＃', class: "btn btn-primary btn-lg" %>
        </div>

        <div class="reservation-space">
          <%= link_to "スクール予約状況一覧", '＃', class: "btn btn-primary btn-lg" %>
        </div>

        <div class="student-impression-space">
          <%= link_to "スクール生動画・感想内容閲覧", image_videos_path, class: "btn btn-primary btn-lg" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
